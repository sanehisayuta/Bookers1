<h1>Books</h1>
<% @books.each do |book| %>
    <p><strong>title:</strong></p>
    <span><%= book.title %></span>
    <span><%=link_to "show", book_path(book.id) %></span>
    <span><%=link_to "Edit", edit_book_path(book.id) %></span>
    <span><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></span>
    <p><strong>body:</strong></p>
    <span><%= book.body %></span>

<% end %>

<h2>New book</h2>
<%= form_for(@books) do |f| %>
    <% if @book.errors.any? %>
    <div id="error_explanation">
    <h2><%= @book.errors.count %>件のエラーだよ</h2>
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
    <% end %>
  <label for="book_title">Title</label>
    <%= f.text_field :title %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
    </div>
    <% end %>

  <label for="book_body">body</label>
    <%= f.text_area :body %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
    </div>
    <% end %>
  <ul>
    <% @book.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
    <% end %>
    </ul>
  <% if @book.errors.any? %>
    <div id="error_explanation">
    </div>
    <% end %>
    <%= f.submit 'Create Book' %>
    <% end %>
<% end %>